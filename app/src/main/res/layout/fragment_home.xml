                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="商标分类"
                            android:textColor="@color/home_textcolor"
                            />
                    </LinearLayout>

